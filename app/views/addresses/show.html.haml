//住所確認コンテンツ部分//
.new__main
  %h2.new__main-contents__title 会員情報入力
  .new__main-contents
    = form_for(@address) do |f|
      .new__main-contents__form
        .new__main-contents__form-wrap
          
        = f.fields_for :user do |i|
          .new__main-contents__form-wrap
            %label.new__main-contents__form-wrap__label 名前
            %span.new__main-contents__form-wrap__hissu 必須
            = i.text_field :last_name, placeholder:"例）山田",class:"login__form-last-name"
            = i.text_field :first_name, placeholder:"例）綾",class:"login__form-first-name"

          .new__main-contents__form-wrap
            %label.new__main-contents__form-wrap__label 名前カナ
            %span.new__main-contents__form-wrap__hissu 必須
            = i.text_field :last_name_kana, placeholder:"例）ヤマダ",class:"login__form-last-name-kana"
            = i.text_field :first_name_kana, placeholder:"例）アヤ",class:"login__form-first-name-kana"

        .new__main-contents__form-wrap
          %label.new__main-contents__form-wrap__label 郵便番号
          %span.new__main-contents__form-wrap__hissu 必須
          -if @address.errors.any?
            = f.text_field :postal_code, placeholder:"例）111-1111",class:"login__form-first-name-kana-error"
            %p.new__main-contents__form-wrap-p 郵便番号を入力してください
          -else
            = f.text_field :postal_code, placeholder:"例）111-1111",class:"login__form-first-name-kana"
    
        .new__main-contents__form-wrap
          %label.new__main-contents__form-wrap__label 都道府県
          %span.new__main-contents__form-wrap__hissu 必須
          .new__main-contents__form-wrap__select
            = f.collection_select :prefecture_id, Prefecture.all,:name,:name,{},{autofocus: 'true', class: 'new__main-contents__form-wrap__select-year'}  
            
        .new__main-contents__form-wrap
          %label.new__main-contents__form-wrap__label 市区町村
          %span.new__main-contents__form-wrap__hissu 必須
          -if @address.errors.any?
            = f.text_field :city, placeholder:"例）111-1111",class:"login__form-first-name-kana-error"
            %p.new__main-contents__form-wrap-p 郵便番号を入力してください
          -else
            = f.text_field :city, placeholder:"例）111-1111",class:"login__form-first-name-kana"

        .new__main-contents__form-wrap
          %label.new__main-contents__form-wrap__label 番地
          %span.new__main-contents__form-wrap__hissu 必須
          -if @address.errors.any?
            = f.text_field :block_number, placeholder:"例）111-1111",class:"login__form-first-name-kana-error"
            %p.new__main-contents__form-wrap-p 郵便番号を入力してください
          -else
            = f.text_field :block_number, placeholder:"例）111-1111",class:"login__form-first-name-kana"
        
        .new__main-contents__form-wrap
          %label.new__main-contents__form-wrap__label 建物名
          = f.text_field :building_name, placeholder:"例）111-1111",class:"login__form-first-name-kana"



        .new__main-contents__form-wrap
          %span 「次へ進む」のボタンを押すことにより、利用規約に同意したものとみなします

        = f.submit "次へ進む",class:"login__form-loginbtn"
        .login__form__wrap
          = link_to "本人情報の登録について",""


