//新規会員登録ヘッダー部分//
.item__header
  .item__header__wrap
    %h1
      = link_to "/" do
        =image_tag "logo001.png", class:"new__header__wrap__logo"
  
        //商品情報登録コンテンツ部分//
.item__main
  .item__main-title
    %h2.item__main-title__title 商品の情報を入力

  = form_for @item, html:{id:"new-item"} do |f|
    .item__main-contents
      .drop-image-wrap
        .drop-image-wrap__titles
          %label.title 出品画像
          %span.hissu 必須
        %span.maxupload 最大10枚までアップロード出来ます。
        //以下に画像がアップされたらプレビューされる
        .image__area
          .image__preview_area
          #image__drop_area
            %input{type:"file",accept:"image/*",id:"imagefile"}
            .image__howmany
              %h6 ドラッグアンドドロップ
              %h6 またはここをクリックしてファイルをアップロード

    .item__main-contents
      .drop-image-wrap
        .drop-image-wrap__titles
          %label.title 商品名
          %span.hissu 必須
        = f.text_field :name, placeholder:"商品名(40文字まで)",class:"item_form"
      .drop-image-wrap
        .drop-image-wrap__titles
          %label.title 商品の説明
          %span.hissu 必須
        = f.text_area :description, placeholder:"商品の説明（必須 1,000文字以内）（色、素材、重さ、定価、注意点など）例）2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。",class:"item_text"

    .item__main-contents
      .drop-image-wrapdouble
        .drop-image-wrapdouble-left
          .drop-image-wrapdouble-left__titles
            %label.left-title 商品の詳細

        .drop-image-wrapdouble-right
          .drop-image-wrapdouble-right-wrap
            .drop-image-wrapdouble-right-wrap__titles
              %label.title カテゴリー
              %span.hissu 必須
            = f.select :category_id, options_for_select(1900..2030),{include_blank:"-"},{autofocus: 'true', class: 'item_form'}
            = f.select :category_id, options_for_select(1900..2030),{include_blank:"-"},{autofocus: 'true', class: 'item_form'}
            = f.select :category_id, options_for_select(1900..2030),{include_blank:"-"},{autofocus: 'true', class: 'item_form'}
          
          .drop-image-wrapdouble-right-wrap
            .drop-image-wrapdouble-right-wrap__titles
              %label.title サイズ
              %span.hissu 必須
            = f.select :size, options_for_select(1900..2030),{include_blank:"-"},{autofocus: 'true', class: 'item_form'}
          
          .drop-image-wrapdouble-right-wrap
            .drop-image-wrapdouble-right-wrap__titles
              %label.title ブランド
              %span.nini 任意
            = f.fields_for @bland do |b|
              = b.text_field :name, placeholder:"商品名(40文字まで)",class:"item_form"
  
          .drop-image-wrapdouble-right-wrap
            .drop-image-wrapdouble-right-wrap__titles
              %label.title 商品の状態
              %span.hissu 必須
            = f.select :item_state_id, options_for_select(1900..2030),{include_blank:"-"},{autofocus: 'true', class: 'item_form'}

    .item__main-contents
      .drop-image-wrapdouble
        .drop-image-wrapdouble-left
          .drop-image-wrapdouble-left__titles
            %label.left-title 配送について

        .drop-image-wrapdouble-right

          .drop-image-wrapdouble-right-wrap
            .drop-image-wrapdouble-right-wrap__titles
              %label.title 配送料の負担
              %span.hissu 必須
            = f.select :feewho, options_for_select(1900..2030),{include_blank:"-"},{autofocus: 'true', class: 'item_form'}
          
          .drop-image-wrapdouble-right-wrap
            .drop-image-wrapdouble-right-wrap__titles
              %label.title 配送の方法
              %span.hissu 必須
            = f.select :delivery, options_for_select(1900..2030),{include_blank:"-"},{autofocus: 'true', class: 'item_form'}
  
          .drop-image-wrapdouble-right-wrap
            .drop-image-wrapdouble-right-wrap__titles
              %label.title 発送元の地域
              %span.hissu 必須
            = f.collection_select :prefecture_id, Prefecture.all,:id,:name,{prompt:'-'},{autofocus: 'true', class: 'item_form'}  

          .drop-image-wrapdouble-right-wrap
            .drop-image-wrapdouble-right-wrap__titles
              %label.title 発送までの日数
              %span.hissu 必須
            = f.select :shipment_day, options_for_select(1900..2030),{include_blank:"-"},{autofocus: 'true', class: 'item_form'}
  
    .item__main-contents
      .drop-image-wrapdouble
        .drop-image-wrapdouble-left
          .drop-image-wrapdouble-left__titles
            %label.left-title 販売価格(300〜9,999,999)
        .drop-image-wrapdouble-right
          %ul
            %li.list-wrap-top
              .kakaku
                .kakaku-title
                  %label.title 価格
                  %span.hissu 必須      
                .kakaku-text
                  = f.text_field :name, placeholder:"例）３００",class:"item_price"
            %li.list-wrap
              .kakaku
                .kakaku-title 販売手数料 (10%)
                .kakaku-text -
            %li.list-wrap
              .kakaku
                .kakaku-title
                  %label.title 販売利益
                .kakaku-text -

    .item__main-contents
      .item__main-contents__footer
        %p 禁止されている出品、行為を必ずご確認ください。
        %p またブランド品でシリアルナンバー等がある場合はご記載ください。偽ブランドの販売は犯罪であり処罰される可能性があります。
        %p また、出品をもちまして加盟店規約に同意したことになります。

      = f.submit "出品する",class:"login__form-loginbtn"
      = link_to "戻る","/",class:"back" 
  
= render 'shared/member-new-login-footer'